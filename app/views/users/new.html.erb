<h1 class="text-center">Signup for Alpha Blog</h1>

<%= render 'shared/errors', obj: @user %>

<%= form_for @user, :html => {:class => "form-horizontal", role: "form"} do |f| %>
  <div class="form-group">
    <%= f.label :username, class: "col-sm-2 control-label" %>

    <div class="col-sm-10">
      <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :email, type: "email", class: "form-control", placeholder: "Enter email" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
    </div>
  </div>

  <div class="form-group">

    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Sign up", class: "btn btn-default btn-lg" %>
    </div>
  </div>

<% end %>
<div class="col-xs-4 col-xs-offset-2">
  [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
</div>

<h1 class="text-center">Create new category</h1>


<%= render 'shared/errors', obj: @category %>

<%= form_for @category, :html => {:class => "form-horizontal", role: "form"} do |f| %>
  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>

    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control", placeholder: "Enter category name", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-default btn-lg" %>
    </div>
  </div>

<% end %>
<div class="col-xs-4 col-xs-offset-2">
  [ <%= link_to "Cancel request and return to categories listing", categories_path %> ]
</div>
